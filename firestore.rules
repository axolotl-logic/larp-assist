rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /motds/{motdId} {
      allow read: if isGm() || resource.data.userId in ["", request.auth.uid];
      allow write: if isGm()
    }

    match /users/{userId} {
      allow read: if isUserOrGm(userId);
    }

    match /userPreferences/{userId} {
      allow read, write: if isUserOrGm(userId);
    }

    match /{document=**} {
      allow read, write: if false;
    }

    function isSignedIn() {
      return request.auth != null
    }

    function isGm() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.gm
    }

    function isUser(userId) {
      return request.auth.uid == userId;
    }

    function isUserOrGm(userId) {
      return isUser(userId) || isGm()
    }
  }
}
